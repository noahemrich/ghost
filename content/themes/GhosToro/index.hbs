{{!< default}}

<div class="v-center">
    <div class="v-wrapper">
        <div class="description">
            <h1>{{@blog.description}}</h1>
        </div>

        {{> menu}}

        <div class="scroll-down">
            scroll down<span class="ion-arrow-down-c"></span>
        </div>
    </div>
</div>

<main class="content" role="main">

    {{#foreach posts}}

    <article class="preview">
        <header>
            <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
            <div class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time></div>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt}}&hellip;</p>
            <p class="readmore"><a href="{{url}}">Continue reading <span class="ion-arrow-right-c"></span></a></p>
        </section>
    </article>

    {{/foreach}}

    {{pagination}}

</main>